<div class="cart">
  <div style="background-color: rgba(219, 235, 228, 0.178);">
    <p>
      <strong>Condition:</strong>
      <strong>attr_name:</strong>
      <%= condition.attr_name %><br><br>
      <strong>min:</strong>
      <%= condition.min %><br><br>
      <strong>max:</strong>
      <%= condition.max %><br><br>
      <strong>attr_name_eff:</strong>
      <%= condition.attr_name_eff %>
      <strong>value_eff:</strong>
      <%= condition.value_eff %>
    </p>
  </div>
